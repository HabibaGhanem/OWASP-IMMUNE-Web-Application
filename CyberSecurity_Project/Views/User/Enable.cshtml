@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href='https://fonts.googleapis.com/css?family=Finger Paint' rel='stylesheet'>
    <title> Euphoria </title>


    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background-color: #a8a7a7;
        }

        .form-box {
            width: 480px;
            height: 480px;
            position: relative;
            margin: 6% auto;
            background: #ffffff;
            padding: 5px;
            overflow: hidden;
        }


        .input-group {
            top: 30px;
            position: absolute;
            width: 280px;
        }

        .input-field {
            width: 100%;
            padding: 10px 0;
            margin: 10px 0;
            border-left: 0;
            border-top: 0;
            border-right: 0;
            border-bottom: 1px solid #999;
            outline: none;
            background: transparent;
        }

        .submit-btn {
            width: 50%;
            padding: 10px 30px;
            cursor: pointer;
            display: block;
            margin: auto;
            background: #49cbda;
            border: 0;
            outline: none;
        }



        #search_form {
            left: 50px;
        }


        h1 {
            margin: 0;
            padding: 0;
            background-color: #49cbda;
            color: white;
            font-size: 50px;
            text-align: left;
            padding: 20px;
            font-family: 'Finger Paint';
        }

        h2 {
            margin: 0;
            padding: 0;
            background-color: #49cbda;
            color: white;
            font-size: 20px;
            text-align: center;
            padding: 20px;
            font-family: 'Finger Paint';
        }
    </style>

</head>
<body BGCOLOR="#eeeeee">
    <h1>Euphoria</h1>
    <br/>
    <h2>Enable two-factor authentication</h2>
    <div class="form-box">

        <div id="search_form" class="input-group">
            <br> <br> <br>

            <form method="post">
                <img src="@ViewBag.BarcodeImageUrl" /><br /><br />
                Setup code: @ViewBag.SetupCode<br /><br />
                Input security code: <input name="inputCode" /><br />
                <br />
                <input type="submit" class="submit-btn"value="Submit"/>
            </form>

        </div>
    </div>


</body>

</html>

